<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvName"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:textColor="#000000"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvCuisine"
            android:layout_below="@+id/tvCuisine"
            android:layout_weight="1"
            android:autoLink="phone"
            android:clickable="true"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="#00549d" />

        <TextView
            android:id="@+id/tvCuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvName"
            android:layout_marginStart="18dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/food"
            android:drawablePadding="5dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvNumber"
            android:layout_below="@+id/tvNumber"
            android:layout_weight="1"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="5dp"
            android:gravity="center_vertical" />

        <ImageButton
            android:id="@+id/tvFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvNumber"
            android:background="@drawable/star_blank"/>

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="74dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:drawable="@drawable/location"
            android:gravity="center_vertical"
            android:text="select" />

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_alignBottom="@+id/tvNumber"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="39dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        //Whatever else you need to add


    </RelativeLayout>


</LinearLayout>